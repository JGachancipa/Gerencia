{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES5",
    "jsx": "react",
    /* Modules */
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@containers/*": [
        "containers/*"
      ],
      "@context/*": [
        "context/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@test/*": [
        "test/*"
      ],
      "@img/*": [
        "img/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@types/*": [
        "types/*"
      ],
      "@config/*": [
        "config/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,  // Permite importar archivos JSON
    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/config/custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
